---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Try Out Chordnote Page',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Try Out Chordnote"
  >
    <Fragment slot="title">
      <span class="text-[#638FFF] dark:text-white highlight">Interact </span><span class="hidden xl:inline">with</span><span class="text-[#638FFF] dark:text-white highlight"> Chordnote</span>.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Discover how Chordnote curates the perfect playlist for your emotions. Test our AI-powered mood detection, explore personalized playlists, and see how music can help manage stress, anxiety, and focus.</span>
    </Fragment>
  </Hero>

  <!-- Figma Prototype Embed -->
  <div class="max-w-5xl mx-auto p-1">
    <div set:html={`<iframe 
        class="border rounded-lg shadow-lg w-full h-[600px]" 
        src="https://embed.figma.com/proto/2SO96jtip7bMRBjjv4WJI3/Music-as-Medicine?node-id=424-4163&scaling=scale-down&content-scaling=fixed&page-id=0%3A1&starting-point-node-id=424%3A4163&embed-host=share" 
        allowfullscreen>
      </iframe>`} />
  </div>
</Layout>
